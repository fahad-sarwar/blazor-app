@using OnlineShopUI.ViewModels

<h4 class="mb-3">Order Summary</h4>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Product</th>
        <th class="text-end">Qty</th>
        <th class="text-end">Unit Price</th>
        <th class="text-end">Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Basket.Items)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td class="text-end">@item.Quantity</td>
            <td class="text-end">£@item.Price.ToString("0.00")</td>
            <td class="text-end">£@item.LineTotal.ToString("0.00")</td>
        </tr>
    }
    </tbody>
    <tfoot class="table-group-divider">
    <tr>
        <td colspan="3" class="text-end fw-bold">Subtotal</td>
        <td class="text-end">@Basket.Subtotal.ToString("C")</td>
    </tr>
    <tr>
        <td colspan="3" class="text-end fw-bold">VAT (20%)</td>
        <td class="text-end">@Basket.Vat.ToString("C")</td>
    </tr>
    <tr>
        <td colspan="3" class="text-end fw-bold">Total</td>
        <td class="text-end">@Basket.Total.ToString("C")</td>
    </tr>
    </tfoot>
</table>

@code {
    [Parameter] public BasketViewModel Basket { get; set; }
}