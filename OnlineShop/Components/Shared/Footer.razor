            new() { Text = "Terms and Conditions", Url = "/terms-and-conditions" },
            new() { Text = "Site Map", Url = "/site-map" }
        },
        ["Follow us"] = new()
        {
            new() { Text = "Instagram", Url = "https://www.instagram.com/dawoodf_08", IsExternal = true },
            new() { Text = "TikTok", Url = "https://www.tiktok.com/@dawoodf_8", IsExternal = true },
            new() { Text = "Twitter", Url = "https://twitter.com/dawoodf_08", IsExternal = true }
        }
    };

}